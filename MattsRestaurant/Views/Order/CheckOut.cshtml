@model Order
    <div class="formDiv">
        <form asp-action="CheckOut" method="post" class="form-group text-white" style="margin:auto;">
            
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="LastName" class="col-md-2"></label>
            <div class="col-md-5">
                <input asp-for="LastName" class="form-inline" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2"></label>
            <div class="col-md-5">
                <input asp-for="FirstName" class="form-inline" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="col-md-2"></label>
            <div class="col-md-5">
                <input asp-for="Address" class="form-inline" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City" class="col-md-2"></label>
            <div class="col-md-5">
                <input asp-for="City" class="form-inline" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PostalCode" class="col-md-2"></label>
            <div class="col-md-5">
                <input asp-for="PostalCode" class="form-inline" />
            </div>
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2"></label>
            <div class="col-md-5">
                <input asp-for="PhoneNumber" class="form-inline" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-5">
                <input asp-for="Email" class="form-inline" />
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-5">
                <input type="submit" class="btn-outline-success buttonSubmit" value="Complete Order" />
            </div>
        </div>

    </form>
</div>