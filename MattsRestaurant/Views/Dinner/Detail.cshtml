@model Dinner
<div class="detailContainer text-center">
    <h2>@Model.Name</h2>
    <h4>@Model.Allergens</h4>

    <div class="img-thumbnail">
        <img class="detailImg" src="@Url.Content(Model.ImageUrl)" alt=@Model.Name/>
        <p><b>Allergens:</b> @Model.Description</p>
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="Cart"
               asp-action="AddToCart"
               asp-route-dinnerId="@Model.DinnerId">Add to cart</a>
        </p>
    </div>
</div>
